#!/system/bin/sh
clear; cd ${0%/*}

source ./box.scripts

events=$1
monitor_file=$3

if [ "${monitor_file}" = "disable" ]; then
  if [ "${events}" = "d" ]; then
    log Info "Module enabled, starting proxy" >> "${SCRIPTS_DIR}/run/inotify.log"
    run >> "${SCRIPTS_DIR}/run/inotify.log" 2>&1
  elif [ "${events}" = "n" ]; then
    log Info "Module disabled, stopping proxy" >> "${SCRIPTS_DIR}/run/inotify.log"
    stop >> "${SCRIPTS_DIR}/run/inotify.log" 2>&1
  fi
fi
